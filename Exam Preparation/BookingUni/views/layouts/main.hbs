    <title>BookingUni</title>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>

    <div id="container">

        <nav>
            {{#if user}}
            <div class="left-container">
                <ul>
                    <li><a href="/">Home</a></li>
                    <li><a href="/hotel/create">Add +</a></li>
                </ul>
            </div> 
